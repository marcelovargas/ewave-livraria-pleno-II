@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastre-se";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Conta nova</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.CPF"></label>
                <input asp-for="Input.CPF" class="form-control" />
                <span asp-validation-for="Input.CPF" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="Input.Instituicao"></label>
                <input asp-for="Input.IdInstituicao" class="form-control" />
                <span asp-validation-for="Input.IdInstituicao" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Input.Endereco"></label>
                <input asp-for="Input.Endereco" class="form-control" />
                <span asp-validation-for="Input.Endereco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Telefone"></label>
                <input asp-for="Input.Telefone" class="form-control" />
                <span asp-validation-for="Input.Telefone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
